@model Product

<h3 class="text-center display-4">@Model.Name Information</h3>

<table class="table table-striped">
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.CategoryID</td>
        <td>@Model.OnSale</td>
        <td>@Model.StockLevel</td>
    </tr>

</table>




<div class="row">
    <div class="col">
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>

    <div class="float-end">
            <a href="/Product/UpdateProduct/@Model.ProductID" class="btn btn-outline-primary"> Edit</a>
   
   
        @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
        {
                <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />
                <input type="submit" onclick="return confirm('Are you sure?')" value="Delete" class="btn btn-outline-danger " />
        }
    </div>
    </div>
</div>
